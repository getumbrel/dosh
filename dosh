#!/usr/bin/env sh

# TODO: This isn't actually POSIX compliant yet
# We need to fix that.

# Load environment variables
default_image=${DOSH_DEFAULT_IMAGE:-debian:buster-slim}
shell=${DOSH_DEFAULT_SHELL:-bash}
init_hook=$DOSH_INIT_HOOK

# Parse parameters
if [[ $@ != -* ]]; then
  user_supplied_image=$1
  shift
fi
image=${user_supplied_image:-$default_image}
user_supplied_docker_run_params=$@

# Define init script
init_script="
  cd /workdir

  $init_hook

  if command -v $shell > /dev/null; then
    exec $shell
  else
    exec sh
  fi
"

# Run docker image and execute init script
docker run \
  --interactive --tty \
  --volume ${PWD}:/workdir \
  $user_supplied_docker_run_params \
  --entrypoint sh \
  $image -c "$init_script"
